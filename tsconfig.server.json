/// <reference types="vite/client" />
{
  "compilerOptions": {
    "baseUrl": "src/server",
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2022",
    "module": "commonjs",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "es2022"
    ],
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/server/*"
      ]
    }
  },
  "include": [
    "src/server/**/*.ts"
  ]
}