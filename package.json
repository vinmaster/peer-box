{
  "name": "peer-box",
  "version": "2.0.0",
  "private": true,
  "description": "Message and transfer files easily",
  "scripts": {
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "vite build --config vite.config.client.ts --ssrManifest",
    "build-server": "tsc --build tsconfig.server.json",
    "clean": "rm -rf build",
    "start": "cross-env NODE_ENV=production node build/server/index.js",
    "dev": "concurrently --raw \"npm:dev-*\"",
    "dev-client": "vite --config vite.config.client.ts",
    "dev-server": "cross-env NODE_ENV=development ts-node-dev --files --project tsconfig.server.json --respawn ./src/server/index.ts",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "engines": {
    "node": ">=17.0.0",
    "npm": ">=8.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@fastify/cors": "^8.1.0",
    "@fastify/env": "^4.1.0",
    "@fastify/helmet": "^10.0.0",
    "@fastify/static": "^6.5.0",
    "@heroicons/vue": "^2.0.11",
    "@trpc/client": "^9.27.2",
    "@trpc/server": "^9.27.2",
    "@types/node": "^18.7.18",
    "@vitejs/plugin-vue": "^3.1.0",
    "autoprefixer": "^10.4.12",
    "clipboard": "^2.0.11",
    "cross-env": "^7.0.3",
    "daisyui": "^2.31.0",
    "fastify": "^4.6.0",
    "fastify-socket.io": "^4.0.0",
    "filepond": "^4.30.4",
    "pino-pretty": "^9.1.0",
    "postcss": "^8.4.16",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "superjson": "^1.10.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.3",
    "vite": "^3.1.3",
    "vue": "^3.2.39",
    "vue-router": "^4.1.5",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "concurrently": "^7.4.0",
    "ts-node-dev": "^2.0.0",
    "vitest": "^0.23.4"
  }
}
