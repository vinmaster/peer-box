{
  "name": "peer-box",
  "version": "2.0.0",
  "private": true,
  "description": "Message and transfer files easily",
  "scripts": {
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "vite build --config vite.config.client.ts --ssrManifest",
    "build-server": "echo",
    "clean": "rm -rf build",
    "start": "cross-env NODE_ENV=production tsx --tsconfig ./tsconfig.server.json ./src/server/index.ts",
    "dev": "concurrently --raw \"npm:dev-*\"",
    "dev-client": "vite --config vite.config.client.ts",
    "dev-server": "cross-env NODE_ENV=development tsx watch --clear-screen=false --tsconfig ./tsconfig.server.json ./src/server/index.ts",
    "debug-server": "cross-env NODE_ENV=development tsx watch --inspect-brk --clear-screen=false --tsconfig ./tsconfig.server.json ./src/server/index.ts",
    "tsc": "tsc --p ./tsconfig.server.json",
    "console": "cross-env NODE_ENV=development tsx --tsconfig ./tsconfig.server.json ./src/server/console.ts",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "engines": {
    "node": ">=17.0.0",
    "npm": ">=8.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.3",
    "@heroicons/vue": "^2.1.3",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "clipboard": "^2.0.11",
    "cross-env": "^7.0.3",
    "daisyui": "^4.10.2",
    "fastify": "^4.26.2",
    "fastify-socket.io": "^5.0.0",
    "filepond": "^4.31.1",
    "pino-pretty": "^11.0.0",
    "postcss": "^8.4.38",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "superjson": "^2.2.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "uqr": "^0.1.2",
    "vite": "^5.2.10",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vue": "^3.4.26",
    "vue-router": "^4.3.2",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.8.0",
    "vitest": "^1.5.3"
  }
}
